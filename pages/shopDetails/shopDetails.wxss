/* 列表 */
page{
  background-color: #f9f9f9;
}
.list {
  position: relative;
  width: 100%;
  height: 110px;
  background-color: #FFFEFF;
  margin-bottom: 15rpx;
  /* border-bottom: 1rpx solid #e9e9e9; */
}

/* 编辑 */

.edit {
  position: relative;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
