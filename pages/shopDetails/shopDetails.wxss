/* 固定底部 */

.cont_bot {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  line-height: 104rpx;
  background: #fff;
  border: 1rpx solid #F2F2F2;
}

/* 全选ICON */

.total-select {
  position: absolute;
  left: 30rpx;
  top: 26rpx;
  width: 44rpx;
  height: 44rpx;


}

/* 全选标题 */

.sel_count_name {
  position: absolute;
  left: 48rpx;
  bottom: 0rpx;
  font-size: 30rpx;
  color: #282828;
}

/* 合计金额 */

.count_price {
  position: absolute;
  font-size: 30rpx;
  left: 190rpx;
  bottom: 0rpx;
  color: #A3A3A3;
}

.count_price text {
  font-size: 38rpx;
  color: #F92832;
}

/* 购物车为空 */

.list_none {
  padding: 40rpx 0;
  color: #999;
  text-align: center;
}

/* 提交 */

.submit,.dele_edit {
  position: absolute;
  right: 30rpx;
  top: 14rpx;
  width: 194rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  text-align: center;
  color: #fff;
  border-radius: 36rpx;
  font-weight: bold;
}

.navigator-hover {
  background: none;
}
.submit{
  background: linear-gradient(to right, #ff6d6d 0, #F92832 100%);

}
/* 删除 */

.dele_edit {
  background: none;
  color: #A3A3A3;
  border: solid 2rpx #A3A3A3;
}

/*数量加减*/

.carts-num {
  position: absolute;
  right: 40rpx;
  bottom: 32rpx;
  display: flex;
  align-items: center;
  text-align: center;
  height: 50rpx;
}

.view_text_center {
  border: 1rpx solid #292929;
  font-size: 30rpx;
  display: inline-block;
  color: #282828;
  height: 40rpx;
  line-height: 38rpx;
  width: 50rpx;
  border-radius: 20rpx;
}

.carts-num .minus, .carts-num .plus {
  margin: 10rpx;
  
  text-align: center;
  height: 40rpx;
  line-height: 38rpx;
  width: 40rpx;
  border-radius: 20rpx;
}

.carts-num .minus {
  border: 1rpx solid #D3D3D3;
  font-size: 34rpx;
}

/* .carts-num .minus.disabled{color: red;} */

.carts-num .plus {
  border: 1rpx solid #292929;
  font-size: 34rpx;
  color: #282828;
}
