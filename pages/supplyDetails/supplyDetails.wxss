/* pages/supplyDetails/supplyDetails.wxss */
page{
  height: 100%;
  background: #F9F9F9;
}

/* top 商品展示区*/
.topcla{
  width: 100%;
  height: 860rpx;
  background: #FFFFFF;
}

.rollView{
  position: absolute;
  top: 395rpx;
  left: 40rpx;
  width: 600rpx;
  height: 144rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  font-size: 20rpx;
}

.roll{
  height: 120rpx;
}
.roll_item{
  color: white;
  /* width: 515rpx; */
  height: 0rpx;
  border-radius: 60rpx;
  padding: 20px;
  background: #000;
  opacity: 0.5;
  margin-top: 30rpx;
  line-height: 0;
  /* text-overflow:; */

}
.gonggao {
  width: 80%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
  border-left: 1px solid #ccc;
}
.scrolltxt{
  padding:0 20rpx;
  background:#F3F3F3;
}
.marquee_box {
  position:relative;
  color:#333;
  height:100rpx;
  display:block;
  overflow:hidden;
} 
.marquee_text {
  white-space: nowrap;
  position:absolute;
  top:0;
  font-size:14px;
  height: 100rpx;
  line-height:100rpx;
}
