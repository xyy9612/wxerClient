/* pages/supplyDetails/supplyDetails.wxss */
page{
  height: 100%;
  background: #F9F9F9;
}

/* top 商品展示区*/
.topcla{
  width: 100%;
  height: 860rpx;
  background: #FFFFFF;
}
/* 商品图片 */
.topcla image{
  width: 100%;
  height: 576rpx;
  background: #ccc;
}
/* 商品标题 */
.title{
  color: #292929;
  font-size: 32rpx;
  font-weight: bold;
}
/* 副标题 */
.subtitle{
  color: #A3A3A3;
  font-size: 28rpx;
}
/* 价格区 */
.price{
  color: #282828;
  font-size: 28rpx;
}
.price text{
  color: #F92832;
  font-size: 38rpx;
  font-weight: bold;

}

.textview{
  width: 100%;
  display:flex;
  align-items: center;
  justify-content: space-between;
}
.textview .freight{
  margin-left: 24rpx;
  color: #A3A3A3;
  font-size: 26rpx;
}
.textview .surplus{
  margin-right: 40rpx;
  color: #282828;
  font-size: 28rpx;
}

/* 选项卡 */
.tab {
  float: left;
  width: 50%;
  height: 116rpx;
  line-height: 116rpx;
  text-align: center;
  margin-top: 10rpx;
  background: #fff;
  color: #A3A3A3;
  
}

.topTabSwiper {
  zoom: 1;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  color: #000;
  font-weight: bold;
  border-bottom: 3px solid #f00;

}
 
.swiper {
  width: 100%;
}
 
.swiper_con {
  text-align: center;
  width: 100%;
  height: 100%;
}

/*  */
.imgclass{
  width: 100%;
  height: 100%;
}

/* 成交记录 */
.recordcla{
  height: 70rpx;
  line-height: 70rpx;
  padding-left: 42rpx;
  display:flex;
  align-items: left;
  flex-direction:column;
  justify-content: space-between;
  background: #fff;
  font-size: 28rpx;


}

/* 底部导航 */
 .btmtab{
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;

  display: flex;
  justify-content: space-between;
  bottom: 0;
  left: 0;
  background: #fff;

}
.btleft{
  width: 130rpx;
  height: 100%;
  position: relative;
}
.btleft image{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 10rpx;
  left: 42rpx;
}
.btleft text{
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  bottom: 24rpx;
  left: 48rpx;
  font-size: 20rpx;
  color: #A3A3A3
}
.btright{
  width: 620rpx;
  height: 100%;
  color: #fff;
  font-size: 30rpx;text-align: center;
  background: linear-gradient(to right, #ff6d6d 0, #F92832 100%);
}