<view class="viewcla">
  <!-- top -->
  <view class='topcla'>
    <!-- 商品的图片,标题,副标题,价格 -->
    <image src='{{dataList.img}}'></image>
   <view class='rollView'>
    <swiper circular='{{circular}}' indicator-dots='{{indicatorDots}}' autoplay='{{autoplay}}' interval='{{interval}}' duration='{{duration}}' vertical='{{vertical}}'>
      <block wx:for='{{text}}' >
        <swiper-item >
          <view class="roll_item">用户{{item.text}}分钟前抢到了<text style='color:red'>1元</text>购商品</view>
          
        </swiper-item>
      </block>

    </swiper>
   </view>
    <!-- <view class='rollView' wx:for="{{recordList}}">
      <view class='roll'>{{item.id}}</view>
    </view> -->
    <view class='title p-ml-10 p-mt-5'>{{dataList.title}}</view>
    <view class='subtitle p-ml-10 p-mt-5'>{{dataList.subtitle}}</view>
    <view class='price p-ml-10 p-mt-5'>¥
      <text>{{dataList.price}}</text>
    </view>

    <view class='textview p-mt-30'>
      <view class='freight'>运费 免运费</view>
      <view class='surplus'>剩余
        <text style='color:red;'> 200 </text>
      </view>
    </view>
  </view>

  <!-- main 选项卡 -->
  <view>
    <view class='topTabSwiper'>
      <view class='tab  {{currentData == 0 ? "tabBorer" : ""}}' data-current="0" bindtap='checkCurrent'>商品详情</view>
      <view class='tab  {{currentData == 1 ? "tabBorer" : ""}}' data-current="1" bindtap='checkCurrent'>成交记录</view>
    </view>
    <!-- 商品详情 -->
    <swiper current="{{currentData}}" class='swiper' style="height:600px;" duration="300" bindchange="bindchange">
      <swiper-item>
        <view class='swiper_con'>
          <image class='imgclass' src='{{dataList.bigimg }}'></image>
        </view>
      </swiper-item>
      <!-- 商品详情 end -->
      <!-- 成交记录 -->
      <swiper-item>
        <view class='swiper_con recordcla' wx:for='{{recordList}}' wx:key='recordList'>
          <view style='color: #292929;'>用户
            <text style='color:red'>{{item.id}}</text> 抢购成功</view>
        </view>

      </swiper-item>
      <!-- 成交记录 end -->
    </swiper>
  </view>

</view>

<!-- 底部导航 -->
<view class='btmtab'>
  <view class='btleft' bindtap='jumpHome'>
    <image src='../../images/img/shouye.png'></image>
    <text>首页</text>
  </view>
  <view class='btright'>立即购买</view>
</view>